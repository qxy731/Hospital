<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HospitalRegisterActivity">
    <TextView
        android:id="@+id/txt_hospital_register_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号    "
        android:layout_margin="8dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/hospital_register_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/txt_hospital_register_mobile"
        android:singleLine="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOneLine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/txt_hospital_register_mobile" />

    <TextView
        android:id="@+id/txt_hospital_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录密码"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_mobile" />

    <EditText
        android:id="@+id/hospital_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="8dp"
        android:layout_below="@id/txt_hospital_register_mobile"
        android:layout_toRightOf="@id/txt_hospital_register_password"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOneLine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/txt_hospital_register_password" />

    <TextView
        android:id="@+id/txt_hospital_register_password_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码确认"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_password" />

    <EditText
        android:id="@+id/hospital_register_password_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="8dp"
        android:layout_below="@id/txt_hospital_register_password"
        android:layout_toRightOf="@id/txt_hospital_register_password_again"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOneLine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/txt_hospital_register_password_again" />


    <TextView
        android:id="@+id/txt_hospital_register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医院名称"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_password_again" />

    <EditText
        android:id="@+id/hospital_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="8dp"
        android:layout_below="@id/txt_hospital_register_password_again"
        android:layout_toRightOf="@id/txt_hospital_register_name"
        android:singleLine="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOneLine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/txt_hospital_register_name" />

    <TextView
        android:id="@+id/txt_hospital_register_address_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所在地区"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_name" />

    <TextView
        android:id="@+id/txt_hospital_register_address_zone_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_name"
        android:layout_alignRight="@id/hospital_register_name"
        />

    <TextView
        android:id="@+id/hospital_register_address_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/txt_hospital_register_name"
        android:layout_toRightOf="@id/txt_hospital_register_address_zone"
        android:layout_toLeftOf="@id/txt_hospital_register_address_zone_click"
        android:singleLine="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOneLine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/txt_hospital_register_address_zone" />

    <TextView
        android:id="@+id/txt_hospital_register_address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详细地址"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_address_zone" />

    <EditText
        android:id="@+id/hospital_register_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="8dp"
        android:layout_below="@id/txt_hospital_register_address_zone"
        android:layout_toRightOf="@id/txt_hospital_register_address_detail"
        android:singleLine="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOneLine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/txt_hospital_register_address_detail" />

    <TextView
        android:id="@+id/txt_hospital_register_smscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信验证码"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_address_detail" />

    <TextView
        android:id="@+id/txt_hospital_register_smscode_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:background="@drawable/textview_border"
        android:layout_below="@id/txt_hospital_register_address_detail"
        android:layout_alignRight="@id/hospital_register_name"/>

    <EditText
        android:id="@+id/hospital_register_smscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="8dp"
        android:layout_below="@id/txt_hospital_register_address_detail"
        android:layout_toRightOf="@id/txt_hospital_register_smscode"
        android:layout_toLeftOf="@id/txt_hospital_register_smscode_click"
        android:singleLine="true"/>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorOneLine"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/hospital_register_smscode" />

    <TextView
        android:id="@+id/txt_hospital_register_smscode_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="短信已经发送到您的手机，如在60秒之内还没有收到短信验证码，请重新获取验证码"
        android:textSize="14sp"
        android:background="@color/dim_foreground_material_dark"
        android:visibility="visible"
        android:layout_below="@id/hospital_register_smscode" />

    <Button
        android:id="@+id/hospital_register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorIceDarkGreen"
        android:text="确认提交"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:layout_below="@id/txt_hospital_register_smscode_tip"/>

    <TextView
        android:id="@+id/txt_hospital_register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/hospital_register_submit"
        android:layout_alignRight="@id/hospital_register_submit"
        android:text="邮箱方式注册，请点这里"
        android:textColor="@color/colorAaLink"
        android:textSize="18sp"
        android:singleLine="true"/>



</RelativeLayout>